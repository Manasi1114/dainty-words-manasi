---
// MainLayout
import DirectoryLayout from "../layouts/DirectoryLayout.astro";
import MainLayout from "../layouts/MainLayout.astro";
import ImageCard from "../components/ImageCard.astro";

const allPosts = Object.values(
  import.meta.glob("./projects/*.md", { eager: true })
);
---

<MainLayout class="layout" />

<DirectoryLayout title="Projects">
  <p>This is where I will post about my journey learning Astro.</p>

  <!-- Single grid container -->
  <div class="blog-grid">
    {
      allPosts.map((post: any) => (
        <article class="blog-card">
          <ImageCard
              link={post.frontmatter.image.url}
              caption={post.frontmatter.image.alt}
              height="200"
          />
          <h2>
            <a href={post.url}>{post.frontmatter.title}</a>
          </h2>
          <p>
            <small>Published on {post.frontmatter.pubDate}</small>
          </p>
          <p>{post.frontmatter.description}</p>
          <a href={post.url}>Read more â†’</a>
        </article>
      ))
    }
  </div>
</DirectoryLayout>

<style>
  * {
    display: flex;
    justify-content: center;
  }
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr); /* Two columns */
    gap: 2rem;
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem;
  }

  .blog-card {
    background: #fdfdfd;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    display: flex;
    flex-direction: column;
  }
</style>
