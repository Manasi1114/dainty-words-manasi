---
import DirectoryLayout from "../layouts/DirectoryLayout.astro";
import MainLayout from "../layouts/MainLayout.astro";

const allPosts = Object.values(
  import.meta.glob("../pages/quotes/*.md", { eager: true })
);
---

<MainLayout class="layout">
  <DirectoryLayout title="Quotes">
    <!-- Grid container here -->
    <div class="blog-grid">
      {
        allPosts.map((post: any) => (
          <article class="blog-card">
            <h2>
              <a href={post.url}>{post.frontmatter.title}</a>
            </h2>
            <p>
              <small>Published on {post.frontmatter.date}</small>
            </p>
            <p>
              <small>By {post.frontmatter.author}</small>
            </p>
            <p>{post.frontmatter.description}</p>
            <a href={post.url}>Read more â†’</a>
          </article>
        ))
      }
    </div>
  </DirectoryLayout>
</MainLayout>

<style>
  article {
    margin: 30px 0;
    padding: 20px 0;
  }
  .blog-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem;
  }

  .blog-card {
    background: #fdfdfd;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 1rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
    display: flex;
    justify-content: center;
    flex-direction: column;
  }

  @media (max-width: 800px) {
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
      padding: 1rem;
    }
  }
</style>
