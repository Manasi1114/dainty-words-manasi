---
// MainLayout
import DirectoryLayout from "../layouts/DirectoryLayout.astro";
import MainLayout from "../layouts/MainLayout.astro";
import ImageCard from "../components/ImageCard.astro";

const allPosts = Object.values(
  import.meta.glob("./quotes/*.md", { eager: true })
);
---

<MainLayout class="layout" />

<DirectoryLayout title="Quotes and Notes">
  <p>My thoughts on the literature I read.</p>
  <ul>
    {
      allPosts.map((post: any) => (
        <article>
          <ImageCard
            image={post.frontmatter.image?.url}
            alt={post.frontmatter.image?.alt}
          />
          <h2>
            <a href={post.url}>{post.frontmatter.title}</a>
          </h2>
          <p>
            <small>Published on{post.frontmatter.pubDate}</small>
          </p>
          <p>{post.frontmatter.description}</p>
          <a href={post.url}>Read more â†’</a>
        </article>
      ))
    }
  </ul>
</DirectoryLayout>
