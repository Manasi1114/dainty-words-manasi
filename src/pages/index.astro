---
// Import the layout and components
import MainLayout from "../layouts/MainLayout.astro";
import PhotoCard from "../components/PhotoCard.astro";
---

<MainLayout title="Dainty Words">
  <div class="content-box">
    <div class="heading">
      <h1>Dainty words by Manasi</h1>
    </div>
    <div class="introduction">
      <p>
        because because words always stay. I am a funny little human, only do what's
        interesting to me. Life is good when you can ask a lot of questions.
        This site is rapt with my inner thoughts, work and curations.
      </p>
    </div>

    <!-- <PhotoCard
      link="https://images.pexels.com/photos/1001682/pexels-photo-1001682.jpeg"
      height="200"
    /> -->

    <img
      src="https://images.pexels.com/photos/1001682/pexels-photo-1001682.jpeg"
      alt="A beautiful landscape"
      class="home-img"/>
  </div>
</MainLayout>

<style>

  html, body {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  overflow: hidden;
}

  .content-box {
    padding: 30px;
    width: 840px;
    margin: 60px auto 60px;
    text-align: center;

  }

  .home-img{
    width: 500px;
    height: 350px;
    object-fit: cover;
    text-align: center;
  }

  .heading {
    text-align: center;
    font-family: lapture;
    color: #1d3557;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .introduction {
    font-family: "Josefin Sans", sans-serif;
    display: flex;
    justify-content:flex-start;
    align-items: center;

    background-color: white;
    padding: 10px;
    border-radius: 5px;
    max-width: 400px;
    margin: 0 auto;

    font-size: 16px;
    text-align: left;

    margin-bottom: 30px;
    border-bottom: 1px solid #1d364633;

  p{
    font-weight: 400;
  color: #69127c;
  margin: 0;
  }





</style>


