---
import DirectoryLayout from "../layouts/DirectoryLayout.astro";
import MainLayout from "../layouts/MainLayout.astro";
import ImageCard from "../components/ImageCard.astro";

const allPosts = Object.values(
  import.meta.glob("./posts/*.md", { eager: true })
);
---

<MainLayout title="Blog" class="layout">
  <DirectoryLayout>
    <p>I sometimes put my thoughts in words.</p>
    <div class="blog-grid">
      {
        allPosts.map((post: any) => (
          <article class="blog-card">
            <ImageCard
              link={post.frontmatter.image.url}
              caption={post.frontmatter.image.alt}
              height="200"
            />
            <h2>
              <a href={post.url}>{post.frontmatter.title}</a>
            </h2>
            <p>
              <small>Published on {post.frontmatter.date}</small>
            </p>
            <a href={post.url}>Read more â†’</a>
          </article>
        ))
      }
    </div>
  </DirectoryLayout>
</MainLayout>

<style>
  article {
    margin: 30px 0;
    padding: 20px 0;
  }
  @media (max-width: 768px) {
    .blog-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    padding: 1rem;
    }
  }


</style>
