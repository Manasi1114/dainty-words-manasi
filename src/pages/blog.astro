---
import DirectoryLayout from "../layouts/DirectoryLayout.astro";
import MainLayout from "../layouts/MainLayout.astro";
import ImageCard from "../components/ImageCard.astro";

const allPosts = Object.values(
  import.meta.glob("./posts/*.md", { eager: true })
);
---

<MainLayout title="Blog" class="layout">
  <DirectoryLayout>
    <div class="blog-grid">
      {
        allPosts.map((post: any) => (
          <article class="blog-card">
            <ImageCard
              link={post.frontmatter.image.url}
              caption={post.frontmatter.image.alt}
              height="200"
            />
            <div class="blog-content">
              <h2>
                <a href={post.url}>{post.frontmatter.title}</a>
              </h2>
              <small>Published on {post.frontmatter.date}</small>
              <a class="read-more" href={post.url}>Read more â†’</a>
            </div>
          </article>
        ))
      }
    </div>
  </DirectoryLayout>
</MainLayout>

<style>
body {
  margin: 0;
  font-family: 'Inter', sans-serif;
  background: #f7f7f7;
}

.blog-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
  gap: 2rem;
  max-width: 900px;
  margin: 0 auto;
  padding: 2rem;
}

.blog-card {
  background: #fff;
  border-radius: 14px;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  height: 100%;
  box-shadow: 0 6px 16px rgba(0,0,0,0.06);
  transition: transform 0.25s ease, box-shadow 0.25s ease;
}

.blog-card:hover {
  transform: translateY(-6px);
  box-shadow: 0 10px 24px rgba(0,0,0,0.1);
}

.blog-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 1.5rem;
}

/* Typography */
.blog-content h2 {
  margin: 0.6rem 0;
  font-family: 'Palatino Linotype', serif;
  font-size: 1.5rem;
  font-weight: 600;
  color: #2b2b2b;
  letter-spacing: 0.5px;
}

.blog-content h2 a {
  text-decoration: none;
  color: inherit;
  transition: color 0.2s ease;
}

.blog-content h2 a:hover {
  color: #54b077;
}

.blog-content small {
  font-size: 0.85rem;
  color: #888;
  margin-bottom: 1rem;
  letter-spacing: 0.4px;
}

.read-more {
  display: inline-block;
  padding: 0.5rem 1.1rem;
  background: rgb(136, 136, 199);
  color: #fff;
  border-radius: 50px;
  font-size: 0.9rem;
  font-weight: 500;
  text-decoration: none;
  letter-spacing: 0.5px;
  transition: background 0.3s ease, transform 0.2s ease;
}

.read-more:hover {
  transform: translateY(-2px);
}

@media (max-width: 768px) {
  .blog-grid {
    grid-template-columns: 1fr;
    gap: 1rem;
    padding: 1rem;
  }
}
</style>