---
const { link, height, orientation} = Astro.props;
---

<div class={`container ${orientation}`}>
  <img src={link} height={height} />
</div>


<style>
  .container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-height: fit-content;
    max-width: fit-content;
    border: 4px solid black;
    border-radius: 10px;
  }
  img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

.container.portrait {
    grid-row: span 2;
  }

  .container.landscape {
    grid-column: span 2;
  }
</style>
