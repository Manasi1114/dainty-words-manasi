---
const { image, title, date} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="My website description" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="stylesheet" href="/styles/global.css" />
    <title>{title}</title>
  </head>
  <body>

    <main class="main-content">
      <slot />
    </main>
  </body>
</html>

<style>
  body {
    margin: 0;
    padding: 2rem;
    background: #f1faee;
  }

  h1 {
    font-size: 3rem;
    font-weight: bold;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  .buttons {
    position: fixed;
    right: 2rem;
    top: 40%;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .button {
    padding: 0.5rem 1rem;
    color: black;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
  }

  .back-links {
    background-color: crimson;
    color: white;
  }

  .entrance {
    background-color: #ffec99;
  }

  .directory {
    background-color: gold;
  }

  article {
    margin: 30px 0;
    padding: 20px 0;
  }

  hr {
    border: none;
    border-top: 1px solid #ddd;
    margin: 30px 0;
  }
</style>
