<style>
  body {
    margin: 0;
    padding: 2rem;
    background: #f1faee;
  }

  h1 {
    font-size: 3rem;
    font-weight: bold;
  }

  .grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  .excerpt {
    background-color: #ecc830;
    padding: 0.3rem 0.5rem;
    font-weight: bold;
    font-size: 0.9rem;
    line-height: 1.2;
    display: inline-block;
  }

  .buttons {
    position: fixed;
    right: 2rem;
    top: 40%;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .button {
    padding: 0.5rem 1rem;
    color: black;
    font-weight: bold;
    text-decoration: none;
    display: inline-block;
  }

  .back-links {
    background-color: crimson;
    color: white;
  }

  .entrance {
    background-color: #ffec99;
  }

  .directory {
    background-color: gold;
  }

  article {
    margin: 30px 0;
    padding: 20px 0;
  }

  hr {
    border: none;
    border-top: 1px solid #ddd;
    margin: 30px 0;
  }
</style>
