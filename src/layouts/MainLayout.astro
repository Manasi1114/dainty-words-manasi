---
const { title } = Astro.props;
import Button from "../components/Button.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="My website description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/svg/favicon.svg" />
    <link rel="stylesheet" href="/styles/global.css" />
    <title>{title}</title>
  </head>

  <body>
    <!-- Top Right Archive Navigation -->
    <header class="archive-nav">
      <a href="/" class="archive-box">Home</a>
      <a href="/projects" class="archive-box">Projects</a>
      <a href="/blog" class="archive-box">Blog</a>
      <a href="/poetry" class="archive-box">Poetry</a>
      <a href="/quotes" class="archive-box">Quotes</a>
      <a href="/bookhouse" class="archive-box">Bookhouse</a>
      <a href="/magazine" class="archive-box">Magazine</a>
      <a href="/about" class="archive-box">About</a>
      <a href="/socials" class="archive-box">Connect</a>
      <a href="/sitemap" class="archive-box">Sitemap</a>
    </header>

    <main class="main-content">
      <slot />
    </main>
  </body>

  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: #aed1c7;
      min-height: 100vh;
      position: relative;
      font-family: sans-serif;
    }

    /* =========================
       Archive Navigation
       ========================= */

    .archive-nav {
      position: absolute;
      top: 40px;
      right: 40px;
      display: grid;
      grid-template-columns: repeat(4, auto);
      gap: 14px;
      z-index: 10;
    }

    .archive-box {
  padding: 10px 18px;
  border: 1.5px solid #020a15;
  border-radius: 10px;
  text-decoration: none;
  font-size: 14px;
  color: #05162e;
  background-color: transparent;
  white-space: nowrap;

  transition:
    transform 0.2s ease-out,
    background-color 0.2s ease-out,
    border-color 0.2s ease-out,
    color 0.2s ease-out;
}

.archive-box:hover {
  background-color: #89023e; /* solid maroon */
  border-color: #89023e;
  color: #f1faee;
  transform: translateY(-6px); /* clear hop upward */
}



    .archive-box:hover {
      background: rgba(5, 22, 46, 0.08);
      transform: translateY(-1px);
    }

    /* =========================
       Main Content
       ========================= */

    .main-content {
      max-width: 900px;
      margin: 0 auto;
      padding: 120px 20px 60px;
    }

    /* =========================
       Responsive Adjustments
       ========================= */

    /* Tablets */
    @media (max-width: 1024px) {
      .archive-nav {
        grid-template-columns: repeat(3, auto);
        right: 24px;
        top: 24px;
      }

      .main-content {
        padding-top: 140px;
      }
    }

    /* Phones */
    @media (max-width: 768px) {
      .archive-nav {
        position: static;
        margin: 20px auto;
        justify-content: center;
        grid-template-columns: repeat(2, auto);
      }

      .main-content {
        padding-top: 40px;
      }
    }
  </style>
</html>
