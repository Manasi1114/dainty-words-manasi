---
const { title, type } = Astro.props;
---
<body>
    <div class="container">
      <header class="header">
        <slot name="header">
          <h1>BookHouse</h1>
          <div class="subtitle">Books that have shaped me</div>
        </slot>
      </header>
  <main>
    <h1>{title}</h1>
    <div class={`grid ${type}`}>
      <slot />
    </div>
  </main>
</body>

<style>

  .container {
    max-width: 1200px;
    margin: 0 auto;
  }
  .grid {
    display: grid;
    gap: 15px;
  }

  .grid.bookhouse {
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
  }

  .grid.bookhouse img {
    width: 100%;
    height: auto;
    border-radius: 6px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  }

  .grid.magazine {
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    grid-auto-rows: 180px;
  }

  .grid.magazine img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }


  @media (max-width: 768px) {
    .grid {
      grid-template-columns: 1fr;
    }
</style>