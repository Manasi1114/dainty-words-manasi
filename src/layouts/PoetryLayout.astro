---
const { title, poet, date, image } = Astro.props;
---

<!doctype html>
<html>
  <head>
    <title>{title}</title>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/styles/global.css" />
  </head>
  <body>
    <header class="header-image">
      <img src={image} class="hero-img" />
    </header>
    <h1>{title}</h1>
    <p class="meta">By {poet}</p>
    <article class="poem">
      <slot />
      <!-- This is where the poem text goes -->
    </article>
  </body>
</html>

<style>
  .header-image {
    position: relative;
    width: 100%;
    height: 60vh;
    overflow: hidden;
  }
  .hero-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .poem {
    white-space: pre-wrap;
    max-width: 800px;
    margin: 3rem auto;
    padding: 0 1rem;
    font-family: serif;
    font-size: 1.2rem;
  }
</style>
