---
import Button from "../components/Button.astro";
const { title, poet, date, image, frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Poetry List" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Quotes</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body>
    <header>
      <img class="hero-image" src={frontmatter.image} />
    </header>
    <h1 class="title">{frontmatter.title}</h1>
    <p class="meta">By {frontmatter.poet}</p>
    <article class="poem">
      <slot />
      <!-- This is where the poem text goes -->
    </article>
    <aside>
      <img src={image} />
    </aside>
  </body>
  <ul class="link"><Button text="Back" link="/poetry" /></ul>
</html>

<style>
  body {
    background-color: #eff2cc;
    background-repeat: repeat;
    background-size: auto;
    color: #22211f; /* parchment cream text */
    font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif;
    font-size: 1.1rem;
    line-height: 1.7;
    padding: 4rem 2rem;
    max-width: 800px;
    margin-left: auto;
    margin-right: auto;
  }

  header {
    width: 100%;
    max-width: 800px;
    margin: 0 auto 2rem auto;
  }

  header .hero-image {
    width: 100%;
    height: auto;
    border-radius: 10px;
    object-fit: cover;
    display: block;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.15);
  }

  .title {
    font-size: 2.5rem;
    color: #c1a57b; /* warm gold */
    text-align: center;
    margin-bottom: 0.5rem;
  }

  /* Headings (poem titles) */
  h1,
  h2,
  h3 {
    color: #c1a57b; /* warm gold */
    font-family: "Garamond", serif;
    font-weight: bold;
    margin-top: 0;
  }

  p {
    white-space: pre-line;
    margin: 0 0 1.5rem 0;
  }

  em {
    display: block;
    font-style: italic;
    color: #a89882;
    text-align: right;
    margin-top: 1rem;
  }

  .poem {
    white-space: pre-wrap;
    max-width: 800px;
    margin: 3rem auto;
    padding: 0 1rem;
    font-size: 1.2rem;
    font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif;
  }

  .link {
    position: fixed;
    bottom: 20px;
    left: 20px;
    font-size: 1.2rem;
  }
</style>
