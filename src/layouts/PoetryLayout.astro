---
const { title, poet, date, image, frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Quote List" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Quotes</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>

  <body>
    <header>
      <img src={image} />
    </header>
    <h1 class="title">{frontmatter.title}</h1>
    <p class="meta">By {frontmatter.poet}</p>
    <article class="poem">
      <slot />
      <!-- This is where the poem text goes -->
    </article>
    <aside>
      <img src={image}>
      </aside>
  </body>
</html>

<style>
  body {
  background-color: #eff2cc; /* deep brown-black base */
  background-image: url('https://www.transparenttextures.com/patterns/old-wall.png');
  background-repeat: repeat;
  background-size: auto;
  color: #22211f; /* parchment cream text */
  font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif;
  font-size: 1.1rem;
  line-height: 1.7;
  margin: 0;
  padding: 4rem 2rem;
  max-width: 800px;
  margin-left: auto;
  margin-right: auto;

  aside {
    width: 350px;
  background-size: cover;
  background-position: center;
  display: flex;
}

.title {
  font-size: 2.5rem;
  color: #c1a57b; /* warm gold */
  text-align: center;
  margin-bottom: 0.5rem;
}

/* Headings (poem titles) */
h1, h2, h3 {
  color: #c1a57b; /* warm gold */
  font-family: "Garamond", serif;
  font-weight: bold;
  margin-top: 0;
}

p {
  white-space: pre-line;
  margin: 0 0 1.5rem 0;
}

/* Author line */
em {
  display: block;
  font-style: italic;
  color: #a89882;
  text-align: right;
  margin-top: 1rem;
}

/* Optional subtle divider */
hr {
  border: none;
  border-top: 1px dashed rgba(229, 217, 197, 0.2);
  margin: 2rem 0;
}

  .poem {
    white-space: pre-wrap;
    max-width: 800px;
    margin: 3rem auto;
    padding: 0 1rem;
    font-size: 1.2rem;
  font-family: "Palatino Linotype", "Book Antiqua", Palatino, serif;
  }
</style>
